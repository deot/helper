{
  "private": true,
  "version": "1.0.0",
  "description": "custom helpers",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "init": "npm install && npm run bootstrap && npm run link",
    "link": "cross-env NODE_ENV=developnent node --max_old_space_size=8192 ./scripts/link.js",
    "dev": "cross-env NODE_ENV=developnent node --max_old_space_size=8192 ./scripts/dev.js",
    "build": "cross-env NODE_ENV=production node --max_old_space_size=8192 ./scripts/build.js",
    "bootstrap": "lerna clean --yes && lerna bootstrap --loglevel silly",
    "pub": "npm run build && lerna publish",
    "pub:no-tag": "npm run pub -- --no-git-tag-version",
    "lint": "esw packages --ext .js,.ts,.jsx,.tsx,.md --color",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --watch --fix",
    "test": "node scripts/unit-test.js",
    "add": "node ./scripts/add.js"
  },
  "scripts-info": {
    "init": "首次安装",
    "link": "依赖包关联",
    "dev": "开发模式",
    "build": "打包模式",
    "test": "执行测试"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deot/helper.git"
  },
  "author": "deot",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/deot/helper/issues"
  },
  "homepage": "https://github.com/deot/helper#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.17",
    "eslint": "^8.23.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^36.0.7",
    "eslint-plugin-markdown": "^2.0.0",
    "eslint-watch": "^8.0.0",
    "fs-extra": "^10.0.0",
    "husky": "^4.3.8",
    "inquirer": "^8.2.0",
    "inquirer-autocomplete-prompt": "^1.4.0",
    "lerna": "^6.0.3",
    "lint-staged": "^11.1.2",
    "ora": "^6.1.2",
    "rollup": "^2.67.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "typescript": "^4.5.2",
    "upath": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node ./scripts/commit-lint"
    }
  },
  "lint-staged": {
    "{packages}/**/*.{js,ts,jsx,tsx,md}": [
      "esw --ext '.js,.ts,.jsx,.tsx,.md' --fix",
      "git add"
    ]
  }
}

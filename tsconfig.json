{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "types": ["node", "jest"],
    "jsx": "preserve",
    "strict": true,
    "sourceMap": false,
    "declaration": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@deot/helper": ["packages/index/src"],
      "@deot/helper-*": ["packages/*/src"]
    }
  },
  "include": [
    "scripts/**/*",
    "packages/shims.d.ts",
    "packages/*/src"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
